<%= simple_form_for @product do |f| %>
  <%= f.file_field :product_img %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select Category") %>
  <%= f.input :name, label: "Product" %>
  <%= f.input :desc, label: "Description" %>
  <%= f.input :price %>
  <%= f.button :submit %>
<% end %>
