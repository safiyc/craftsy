<div class="col-md-10 col-md-offset-1">
  <div class="edit-review-form">
    <h1>Edit Review</h1>
    <%= simple_form_for ([@product, @review]) do |f| %>
      <div id="rating-form">
        <label>Rating</label>
      </div>
      <%= f.input :comment %>
      <%= f.button :submit, class: "btn-custom2" %>
    <% end %>
  </div>
</div>

<!-- this is part of jquery.raty -->
<script>
  $('#rating-form').raty({
    path: '/sc-ratyrate',
    scoreName: 'review[rating]'
  });
</script>
