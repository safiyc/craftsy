<%= simple_form_for([@product, @product.reviews.build]) do |f| %>
	<div id="rating-form">
		<label> Rating </label>
	</div>
	<%= f.input :comment %>
	<%= f.button :submit, :class => "btn-custom2" %>
<% end %>

<!-- this is part of jquery.raty -->

<script>
	$('#rating-form').raty({
		path: '/sc-ratyrate',
		scoreName: 'review[rating]'
	});
</script>
